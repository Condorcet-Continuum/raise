{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raise.local/schemas/v1/system/user.schema.json",
  "title": "RAISE User Profile & Overrides",
  "description": "Profil utilisateur permettant de surcharger la configuration système par défaut.",
  "x_schemaVersion": "1.0.0",
  "x_label": {
    "fr": "Profil Utilisateur RAISE",
    "en": "RAISE User Profile"
  },
  "type": "object",
  "unevaluatedProperties": false,
  "allOf": [
    {
      "$ref": "../../common/types/base.schema.json"
    }
  ],
  "properties": {
    "username": {
      "type": "string",
      "description": "Identifiant unique ou nom de l'utilisateur.",
      "minLength": 2
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Adresse email de l'utilisateur."
    },
    "role": {
      "type": "string",
      "enum": ["admin", "architect", "engineer", "viewer"],
      "default": "engineer",
      "description": "Rôle métier définissant les permissions au sein du continuum."
    },
    "preferences": {
      "type": "object",
      "x_label": {
        "fr": "Préférences Personnelles",
        "en": "Personal Preferences"
      },
      "properties": {
        "language": {
          "type": "string",
          "enum": ["fr", "en", "de", "es", "it"],
          "default": "fr",
          "description": "Langue préférée pour l'interface et le CLI."
        },
        "theme": {
          "type": "string",
          "enum": ["light", "dark", "system"],
          "default": "system"
        }
      }
    },
    "default_domain": {
      "type": "string",
      "description": "SURCHARGE : Espace de travail préféré de l'utilisateur."
    },
    "default_db": {
      "type": "string",
      "description": "SURCHARGE : Base de données métier préférée de l'utilisateur."
    },
    "core": {
      "type": "object",
      "description": "SURCHARGE : Paramètres du noyau pour cet utilisateur.",
      "properties": {
        "log_level": {
          "type": "string",
          "enum": ["trace", "debug", "info", "warn", "error"],
          "description": "Permet à un développeur de forcer le mode debug localement."
        },
        "language": {
          "type": "string",
          "enum": ["fr", "en", "de", "es", "it"],
          "description": "Langue préférée de l'utilisateur pour l'interface."
        }
      }
    },
    "ai_engines": {
      "type": "object",
      "x_label": {
        "fr": "Moteurs IA (Surcharge)",
        "en": "AI Engines (Override)"
      },
      "description": "Permet à l'utilisateur d'utiliser ses propres clés API ou de changer le modèle par défaut.",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "properties": {
            "status": { "type": "string", "enum": ["enabled", "disabled"] },
            "model_name": { "type": "string" },
            "api_key": { "type": ["string", "null"] }
          }
        }
      }
    },
    "integrations": {
      "type": "object",
      "description": "SURCHARGE : Intégrations Tiers (ex: Token GitHub personnel).",
      "properties": {
        "github_token": { "type": ["string", "null"] }
      }
    }
  },
  "required": ["username"]
}
