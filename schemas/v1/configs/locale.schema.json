{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raise.local/schemas/v1/system/locale.schema.json",
    "title": "RAISE System Locale (Array Format)",
    "description": "Validation des dictionnaires de traduction optimisés pour JSON-DB.",
    "x_schemaVersion": "2.0.0",
    "x_label": {
      "fr": "Dictionnaire de Traduction RAISE",
      "en": "RAISE Translation Dictionary"
    },
    "x_description": {
      "fr": "Dictionnaire clé/valeur pour l'internationalisation (i18n) de l'interface et des logs du continuum RAISE.",
      "en": "Key/value dictionary for the internationalization (i18n) of the RAISE continuum interface and logs."
    },
    "type": "object",
    "unevaluatedProperties": false,
    "allOf": [
      {
        "$ref": "../../common/types/base.schema.json"
      }
    ],
    "properties": {
      "locale": {
        "type": "string",
        "enum": ["fr", "en", "de", "es"],
        "description": "Code de la langue."
      },
      "translations": {
        "type": "array",
        "description": "Tableau des traductions clé/valeur.",
        "items": {
          "type": "object",
          "properties": {
            "key": {
              "type": "string",
              "pattern": "^[A-Z]+[A-Z0-9_]*$",
              "description": "Identifiant de la traduction (MAJUSCULES_UNDERSCORE)."
            },
            "value": {
              "type": "string",
              "minLength": 1,
              "description": "Le texte traduit."
            }
          },
          "required": ["key", "value"],
          "additionalProperties": false
        }
      }
    },
    "required": ["locale", "translations"]
  }