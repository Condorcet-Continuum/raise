{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raise.local/schemas/v1/arcadia/oa/capability.schema.json",
  "title": "Operational Capability",
  "description": "Aptitude d'une organisation ou d'acteurs à fournir un service.",
  "x_schemaVersion": "1.0.0",
  "x_label": {
    "fr": "Capacité Opérationnelle",
    "en": "Operational Capability"
