{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raise.local/schemas/v1/arcadia/data/exchange-item.schema.json",
  "title": "Exchange Item",
  "description": "Un élément échangé (paquet de données, signal) entre fonctions.",
  "x_schemaVersion": "1.0.0",
  "x_label": {
    "fr": "Élément d'Échange",
    "en": "Exchange Item"
  },
  "x_description": {
    "fr": "Un élément (paquet de données, signal, opération) échangé entre fonctions.",
    "en": "An element (data package, signal, operation) exchanged between functions."
  },
  "type": "object",
  "unevaluatedProperties": false,
  "allOf": [
    {
      "$ref": "../../common/types/base.schema.json"
    },
    {
      "$ref": "../metamodel/metamodel.schema.json#/$defs/BaseProperties"
    }
  ],
  "properties": {
    "exchangeMechanism": {
      "type": "string",
      "enum": ["Flow", "Operation", "Event", "Unset"],
      "default": "Flow",
      "description": "Mécanisme d'échange (Flux, Opération, Événement)."
    },
    "elements": {
      "type": "array",
      "items": {
        "$ref": "../metamodel/metamodel.schema.json#/$defs/Ref"
      },
      "description": "Les données (Classes ou Types) transportées par cet item."
    }
  },
  "required": ["name"]
}
