{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raise.local/schemas/v1/arcadia/data/class.schema.json",
  "title": "Data Class",
  "description": "Structure de données complexe composée d'attributs.",
  "x_schemaVersion": "1.0.0",
  "x_label": {
    "fr": "Classe de Données",
    "en": "Data Class"
  },
  "x_description": {
    "fr": "Structure de données complexe définie par des attributs et pouvant hériter d'autres classes.",
    "en": "Complex data structure defined by attributes and capable of inheriting from other classes."
  },
  "type": "object",
  "unevaluatedProperties": false,
  "allOf": [
    {
      "$ref": "../../common/types/base.schema.json"
    },
    {
      "$ref": "../metamodel/metamodel.schema.json#/$defs/BaseProperties"
    }
  ],
  "properties": {
    "isAbstract": {
      "type": "boolean",
      "default": false,
      "x_label": { "fr": "Est abstrait", "en": "Is Abstract" },
      "description": "Indique si la classe est abstraite (non instanciable)."
    },
    "superClasses": {
      "type": "array",
      "items": {
        "$ref": "../metamodel/metamodel.schema.json#/$defs/Ref"
      },
      "description": "Héritage : classes parentes."
    },
    "attributes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "$ref": "../../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
          },
          "typeRef": {
            "$ref": "../metamodel/metamodel.schema.json#/$defs/Ref",
            "description": "Référence vers un DataType ou une autre Class."
          },
          "minCardinality": { "type": "integer", "default": 1 },
          "maxCardinality": { "type": "integer", "default": 1 },
          "description": {
            "$ref": "../../common/types/primitive-types.schema.json#/$defs/i18nString"
          }
        },
        "required": ["name", "typeRef"]
      },
      "description": "Liste des attributs de la classe."
    }
  },
  "required": ["name"]
}
