{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raise.local/schemas/v1/arcadia/pa/physical-link.schema.json",
  "title": "Physical Link",
  "description": "Liaison matérielle connectant deux composants Node.",
  "x_schemaVersion": "1.0.0",
  "x_label": {
    "fr": "Lien Physique",
    "en": "Physical Link"
  },
  "x_description": {
    "fr": "Liaison matérielle (Câble, Bus, Réseau, Ondes) connectant deux composants Node.",
    "en": "Physical connection (Cable, Bus, Network, Wireless) connecting two Node components."
  },
  "type": "object",
  "unevaluatedProperties": false,
  "allOf": [
    {
      "$ref": "../../common/types/base.schema.json"
    },
    {
      "$ref": "../metamodel/metamodel.schema.json#/$defs/BaseProperties"
    }
  ],
  "properties": {
    "linkType": {
      "type": "string",
      "enum": ["Bus", "Ethernet", "Serial", "Wireless", "Mechanical", "Power", "Other"],
      "default": "Ethernet",
      "description": "Nature technique de la liaison (Bus, Ethernet, etc.)."
    },
    "source": {
      "$ref": "../metamodel/metamodel.schema.json#/$defs/Ref",
      "description": "Composant Node source."
    },
    "target": {
      "$ref": "../metamodel/metamodel.schema.json#/$defs/Ref",
      "description": "Composant Node cible."
    },
    "transports": {
      "type": "array",
      "items": {
        "$ref": "../metamodel/metamodel.schema.json#/$defs/Ref"
      },
      "description": "Composants Exchanges (flux logiques/sw) transportés par ce lien physique."
    }
  },
  "required": ["name", "source", "target"]
}
