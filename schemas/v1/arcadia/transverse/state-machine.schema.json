{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raise.local/schemas/v1/arcadia/transverse/state-machine.schema.json",
  "title": "State Machine",
  "description": "Automate décrivant les Modes ou les États d'un élément.",
  "x_schemaVersion": "1.0.0",
  "x_label": {
    "fr": "Machine à États",
    "en": "State Machine"
  },
  "x_description": {
    "fr": "Automate fini décrivant le comportement dynamique (Modes, États) d'un composant ou d'une fonction.",
    "en": "Finite state machine describing the dynamic behavior (Modes, States) of a component or function."
  },
  "type": "object",
  "unevaluatedProperties": false,
  "allOf": [
    {
      "$ref": "../../common/types/base.schema.json"
    },
    {
      "$ref": "../metamodel/metamodel.schema.json#/$defs/BaseProperties"
    }
  ],
  "properties": {
    "allocatedTo": {
      "$ref": "../metamodel/metamodel.schema.json#/$defs/Ref",
      "description": "Composant, Fonction ou Acteur dont on décrit le comportement."
    },
    "regions": {
      "type": "array",
      "items": {
        "type": "object",
        "unevaluatedProperties": false,
        "properties": {
          "name": { "type": "string" },
          "states": {
            "type": "array",
            "items": {
              "type": "object",
              "unevaluatedProperties": false,
              "properties": {
                "id": { "type": "string", "format": "uuid" },
                "name": { "type": "string" },
                "kind": {
                  "type": "string",
                  "enum": ["State", "Mode", "Initial", "Final", "Fork", "Join"],
                  "default": "State"
                },
                "entryActivities": {
                  "type": "array",
                  "items": {
                    "$ref": "../metamodel/metamodel.schema.json#/$defs/Ref"
                  }
                },
                "doActivities": {
                  "type": "array",
                  "items": {
                    "$ref": "../metamodel/metamodel.schema.json#/$defs/Ref"
                  }
                },
                "exitActivities": {
                  "type": "array",
                  "items": {
                    "$ref": "../metamodel/metamodel.schema.json#/$defs/Ref"
                  }
                }
              },
              "required": ["id", "name", "kind"]
            }
          },
          "transitions": {
            "type": "array",
            "items": {
              "type": "object",
              "unevaluatedProperties": false,
              "properties": {
                "sourceState": { "type": "string", "format": "uuid" },
                "targetState": { "type": "string", "format": "uuid" },
                "triggers": {
                  "type": "array",
                  "items": {
                    "$ref": "../metamodel/metamodel.schema.json#/$defs/Ref"
                  },
                  "description": "Événements ou Échanges déclencheurs."
                },
                "guard": { "type": "string", "description": "Condition logique." }
              },
              "required": ["sourceState", "targetState"]
            }
          }
        },
        "required": ["name"]
      }
    }
  },
  "required": ["name"]
}
