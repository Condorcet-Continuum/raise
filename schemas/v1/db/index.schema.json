{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://genaptitude.local/schemas/v1/db/index.schema.json",
  "title": "GenAptitude DB Index",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "integer",
      "const": 1,
      "default": 1
    },
    "space": {
      "type": "string",
      "minLength": 1
    },
    "database": {
      "type": "string",
      "minLength": 1
    },
    "collections": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "actors": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection",
