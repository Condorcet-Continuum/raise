{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raise.local/schemas/v1/dapps/dapp.schema.json",
  "title": "dApp",
  "description": "Définition d'une Application Décentralisée (Tauri/Rust/WASM).",
  "x_schemaVersion": "1.3.0",
  "x_label": {
    "fr": "dApp",
    "en": "dApp"
  },
  "x_description": {
    "fr": "Application décentralisée (intégration contrats/agents/UI/WASM).",
    "en": "Decentralized application (contracts/agents/UI/WASM)."
  },
  "type": "object",
  "allOf": [
    {
      "$ref": "../common/types/base.schema.json",
      "description": "Hérite des champs systèmes standards (id, dates, $schema)."
    }
  ],
  "properties": {
    "handle": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/slug",
      "description": "Identifiant système unique (nom du dossier)."
    },
    "name": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString",
      "description": "Nom technique interne (ex: crate name)."
    },
    "displayName": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
    },
    "description": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/i18nNonEmptyString",
      "description": "Description fonctionnelle pour l'utilisateur final."
    },
    "x_description": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/i18nNonEmptyString",
      "description": "Description technique du système (Méta-donnée interne)."
    },
    "label": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/i18nNonEmptyString"
    },
    "emoji": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/x_emoji"
    },
    "domain": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/DomainName"
    },
    "tags": {
      "type": "array",
      "items": {
        "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
      },
      "default": []
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "links": {
      "type": "object",
      "additionalProperties": {
        "$ref": "../common/types/primitive-types.schema.json#/$defs/uri"
      }
    },
    "contracts": {
      "type": "array",
      "items": {
        "$ref": "../common/types/primitive-types.schema.json#/$defs/uuid"
      },
      "default": []
    },
    "agents": {
      "type": "array",
      "items": {
        "$ref": "../common/types/primitive-types.schema.json#/$defs/uuid"
      },
      "default": []
    },
    "permissions": {
      "type": "array",
      "items": {
        "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
      },
      "description": "Permissions Tauri (ex: 'fs:allow-read').",
      "default": []
    },
    "pluginConfig": {
      "type": "object",
      "description": "Configuration technique pour la génération du code Rust/WASM.",
      "properties": {
        "rustPackageName": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString",
          "pattern": "^[a-z][a-z0-9_]*$",
          "description": "Nom du crate Rust (snake_case obligatoire)."
        },
        "version": {
          "type": "string",
          "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
          "default": "0.1.0"
        },
        "modules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString",
                "pattern": "^[a-z][a-z0-9_]*$"
              },
              "description": {
                "type": "string"
              }
            },
            "required": ["name"]
          },
          "default": []
        },
        "uiFramework": {
          "type": "string",
          "enum": ["react", "vue", "svelte", "vanilla"],
          "default": "react"
        }
      },
      "required": ["rustPackageName"]
    },
    "ui": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "width": { "type": "integer", "default": 800 },
        "height": { "type": "integer", "default": 600 },
        "resizable": { "type": "boolean", "default": true }
      },
      "additionalProperties": true
    },
    "generationStatus": {
      "type": "object",
      "properties": {
        "lastGeneratedAt": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/createdAt"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "success", "error"]
        },
        "path": {
          "type": "string"
        }
      }
    }
  },
  "required": ["handle", "displayName", "name", "pluginConfig"],
  "additionalProperties": false,
  "unevaluatedProperties": false
}
