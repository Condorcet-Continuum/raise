{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://genaptitude.io/schemas/hardware/component",
  "title": "Hardware Component",
  "description": "Schéma pour un composant matériel",
  "type": "object",
  "required": ["id", "name", "type"],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["ic", "resistor", "capacitor", "connector", "module"]
    },
    "part_number": {
      "type": "string"
    },
    "manufacturer": {
      "type": "string"
    },
    "specifications": {
      "type": "object",
      "properties": {
        "voltage": { "type": "number" },
        "current": { "type": "number" },
        "power": { "type": "number" },
        "temperature_range": {
          "type": "object",
          "properties": {
            "min": { "type": "number" },
            "max": { "type": "number" }
          }
        }
      }
    },
    "pins": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "number": { "type": "string" },
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["power", "ground", "signal", "nc"] }
        }
      }
    }
  }
}
