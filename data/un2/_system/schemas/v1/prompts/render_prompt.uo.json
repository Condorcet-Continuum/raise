{
  "code": "uo.render_prompt",
  "objectif": "Rendre un template de prompt MAS/MCP à partir d'une requête structurée.",
  "entrees": [
    { "code": "schemas_dir", "type": "path", "obligatoire": true },
    { "code": "template", "type": "string", "obligatoire": true },
    { "code": "request", "type": "path", "obligatoire": true },
    { "code": "out", "type": "path", "obligatoire": false }
  ],
  "sorties": [
    { "code": "messages_json", "type": "json" },
    { "code": "render_txt", "type": "text" }
  ],
  "outils": ["promptgen-cli", "core_schemas"],
  "etapes": [
    "Charger & indexer les schémas",
    "Valider la requête et le template si les schémas prompt-* sont présents",
    "Construire le contexte à partir des bindings (provided|instantiate)",
    "Rendre le template",
    "Conditionner la sortie (mcp_messages|single_text)",
    "Écrire le résultat"
  ]
}
